<Window x:Class="pro2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pro2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Name="pro2"
        >
    <DockPanel Margin="10" Name="panl">
       <!--- <TextBox Name="txtStr" Width="100" Margin="0 20 0 0"/>
        <TextBlock Text="{Binding ElementName=pro2, Path=ActualWidth , StringFormat= Window width:{0:#,#.0}}"/>-->
        <StackPanel DockPanel.Dock="Top" Margin="0 10 0 0" Orientation="Horizontal">
            <Button  Content="Open File" Height="40" Width="100"
                Click="Button_Click" />
            <Button Content="Save File" Height="40" Width="100"
                    Margin="10 0 0 0 " Click="Button_Click_1"/>
        </StackPanel>
        <TextBox Name="txtEditor"  Margin="0 10 0 10" Background="Aqua" AcceptsReturn="True" />
        
    </DockPanel>
</Window>
